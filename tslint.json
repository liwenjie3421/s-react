{
    "extends": ["tslint-config-alloy"],
    "linterOptions": {
        "exclude": ["**/node_modules/**"],
        "formatter": "stylish"
    },
    "rules": {
        "indent": [true, "spaces", 2],
        "ordered-imports": false,
        "no-import-side-effect": false,
        "new-parens": false,
        "semicolon": [true, "never"],
        "unified-signatures": false
    }
}